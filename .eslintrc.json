{
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "rules": {
      "semi": ["error", "never"],
      "eqeqeq": ["error", "always"],
      "no-unused-vars": [2, {"args": "after-used", "argsIgnorePattern": "^_"}]
    },
    "ignorePatterns": ["docs/**/*", "coverage/**/*"],
    "globals": {
      "window": true,
      "document": true,
      "feature": true,
      "Turbolinks": true,
      "sinon": true
    },
    "env": {
      "node": true,
      "browser": true,
      "es6": true,
      "jest": true
    }
}
