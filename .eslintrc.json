{
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "rules": {
      "semi": ["error", "never"],
      "eqeqeq": ["error", "always"],
      "no-unused-vars": [2, {"args": "after-used", "argsIgnorePattern": "^_"}]
    },
    "ignorePatterns": ["docs/**/*", "coverage/**/*"],
    "globals": {
      "window": true,
      "document": true,
      "WORKAREA": true,
      "$": true,
      "jQuery": true,
      "_": true,
      "feature": true,
      "JST": true,
      "Turbolinks": true,
      "I18n": true,
      "Chart": true,
      "Dropzone": true,
      "strftime": true,
      "Waypoint": true,
      "wysihtml": true,
      "LocalTime": true,
      "describe": true,
      "after": true,
      "afterEach": true,
      "before": true,
      "beforeEach": true,
      "it": true,
      "expect": true,
      "sinon": true,
      "fixture": true,
      "chai": true,
      "Tribute": true
    },
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    }
}
